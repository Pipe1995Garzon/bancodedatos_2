<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center bg-success text-white" style="--bs-bg-opacity: 0.9;">
                <div class="card-body">
                    <form action="/signup" method="post"> 
                        <div class="form-group">
                          <h5 class="card-title">Sistema de gestion de calidad</h5>
                           <img src="/img/logo_fet.jpg" alt="Fet" class="card-img-top mx-auto m-2 rounded-circle w-50"> 
                          <label class="form-label">Modulo talento humano</label><br>
                          <label class="form-label">Correo institucional</label>
                          <input type="email" class="form-control" name="usuario" placeholder="ejemplo@fet.edu.co" autofocus required/>
                        </div>
                       <div class="form-group">
                            <label class="form-label">Clave</label>
                            <input type="password" class="form-control" name="password" placeholder="clave"  required/>
                             <input type="hidden" class="form-control" name="id_rol" value="2"  required/>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Identificacion CC</label>
                            <input type="number" class="form-control" name="CC" placeholder="CC" maxlength="12"  required/>
                        </div>
                        
                         <div class="form-group">
                            <div class="col">
                                <label class="form-label"> </label><br>
                                 <button class="btn btn-secondary" type="submit">Registrar</button><br>
                                 <label class="form-label"> </label><br>
                             </div>
                        </div>
                         <div class="form-group">
                            <div class="col">
                                <label class="form-label">Si estas registrado puedes ingresar</label><br>
                                    <a href="/signingestionhumana" class="btn btn-secondary">Ingresar al sistema</a><br><br>
                                 <label class="form-label"> </label><br>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>